<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audioRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorBackground"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="?attr/colorOnBackground"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/playerCover"
        android:layout_width="312dp"
        android:layout_height="312dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:scaleType="centerCrop"
        android:background="@drawable/round_corners_8dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/playerTrackName"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="22sp"
        android:textColor="?attr/colorOnBackground"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/playerCover"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/playerArtistName"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/playerTrackName"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:id="@+id/playContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/playerArtistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/colorOnBackground"
            android:contentDescription="@string/play"
            android:elevation="6dp"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/btnAddToPlaylist"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="55dp"
        app:srcCompat="@drawable/ic_add_to_playlist"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/add_to_playlist"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/playerArtistName"
        app:layout_constraintEnd_toStartOf="@id/playContainer"/>


    <ImageButton
        android:id="@+id/btnFavorite"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:layout_marginStart="55dp"
        android:src="@drawable/ic_favorite_border"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/add_to_favorite"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/playerArtistName"
        app:layout_constraintStart_toEndOf="@id/playContainer"/>

    <TextView
        android:id="@+id/playerProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/playContainer"
        app:layout_constraintStart_toStartOf="@id/playContainer"
        app:layout_constraintEnd_toEndOf="@id/playContainer"/>

    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/playerProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/rowDurationLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/duration_label"/>
            <TextView
                android:id="@+id/rowDurationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/rowAlbumLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/album_label"/>
            <TextView
                android:id="@+id/rowAlbumValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/rowYearLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/year_label"/>
            <TextView
                android:id="@+id/rowYearValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/rowGenreLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/genre_label"/>
            <TextView
                android:id="@+id/rowGenreValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/rowCountryLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/country_label"/>
            <TextView
                android:id="@+id/rowCountryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
